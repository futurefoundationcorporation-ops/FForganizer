{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
